CON { timing }

  CLK_FREQ = 270_000_000                                        ' system freq as a constant
  _clkfreq = CLK_FREQ                                           ' set system clock

CON { fixed io pins }

  RX1      = 63  { I }                                          ' programming / debug
  TX1      = 62  { O }

  SF_CS    = 61  { O }                                          ' serial flash
  SF_SCK   = 60  { O }
  SF_SDO   = 59  { O }
  SF_SDI   = 58  { I }

OBJ { our Drive Subsystem }

    brdRevA     :   "isp_bldc_motor"    ' left board
    brdRevB     :   "isp_bldc_motor"    ' right board

PUB main() | eBrdType
'' DEMO identifying the board type

    debug("* dual board ID test platform")

    ' start our motor drivers (left and right)
    brdRevA.testSetup(brdRevA.PINS_P16_P31, brdRevA.PWR_12p0V)
    brdRevB.testSetup(brdRevB.PINS_P0_P15, brdRevB.PWR_12p0V)

    eBrdType := brdRevA.getBoardType()
    showBoardType(@"BLDC RevA", eBrdType)
    eBrdType := brdRevB.getBoardType()
    showBoardType(@"BLDC RevB", eBrdType)

    debug("* DONE")

PRI showBoardType(msgStr, eBrdType)
    case eBrdType
        brdRevA.REV_Unknown:
            debug("* ", zstr_(msgStr), ": REV=unknown")
        brdRevA.REV_A:
            debug("* ", zstr_(msgStr), ": found RevA")
        brdRevA.REV_B:
            debug("* ", zstr_(msgStr), ": found RevB")

